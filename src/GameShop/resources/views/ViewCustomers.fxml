<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameShop.java.controllers.ViewCustomersController">
    <top>
        <HBox>
            <Label text="All Customers" styleClass="PageHeader" />
        </HBox>
    </top>
    <center>
        <VBox>
            <ScrollPane>
                <TableView fx:id="customerTableView">
                    <columns>
                        <TableColumn text="Customer ID" fx:id="idColumn" />
                        <TableColumn text="Forename" fx:id="forenameColumn" />
                        <TableColumn text="Surname" fx:id="surnameColumn" />
                        <TableColumn text="Email" fx:id="emailColumn" />
                        <TableColumn text="Telephone Number" fx:id="telephoneColumn" />
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>
    <bottom>
        <HBox>
            <Button text="Go Back" onAction="#handleGoBack" />
        </HBox>
    </bottom>

</BorderPane>
