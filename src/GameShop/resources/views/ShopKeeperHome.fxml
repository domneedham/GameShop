<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameShop.java.controllers.ShopKeeperHomeController">

    <top>
        <HBox>
            <Label text="Shop Keeper Home" styleClass="PageHeader" />
        </HBox>
    </top>
    <center>
        <VBox>
            <HBox>
                <Button text="Create Rental" onAction="#handleCreateRental" />
                <Button text="View Rentals" onAction="#handleViewRentals" />
                <Button text="View All Customers" onAction="#handleViewCustomers" />
                <Button text="Sign Out" onAction="#handleSignOut" />
            </HBox>
            <HBox>
                <Button text="Edit Games" onAction="#handleEditGames" />
                <Button text="Edit Consoles" onAction="#handleEditConsoles" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
