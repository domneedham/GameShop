<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameShop.java.controllers.ViewGamesController">
    <top>
        <HBox>
            <Label text="All Games" styleClass="PageHeader" />
        </HBox>
    </top>
    <center>
        <VBox>
            <ScrollPane>
                <TableView fx:id="games">
                    <columns>
                        <TableColumn text="Game ID">
                            <cellValueFactory>
                                <!-- Game.getId() -->
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Title">
                            <cellValueFactory>
                                <!-- Game.getName() -->
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Console">
                            <cellValueFactory>
                                <!-- Game.getFXMLConsoleName() -->
                                <PropertyValueFactory property="FXMLConsoleName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Cost">
                            <cellValueFactory>
                                <!-- Game.getFXMLFormattedCost() -->
                                <PropertyValueFactory property="FXMLFormattedCost" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Available">
                            <cellValueFactory>
                                <!-- Game.getFXMLAvailable() -->
                                <PropertyValueFactory property="FXMLAvailable" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </ScrollPane>
            <CheckBox text="Show All Games" onAction="#updateList"
                      fx:id="showAll" selected="false" styleClass="ShowAllCB"/>
        </VBox>
    </center>
    <bottom>
        <HBox>
            <Button text="Main Menu" onAction="#handleGoHome" />
        </HBox>
    </bottom>
</BorderPane>
