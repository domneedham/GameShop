<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameShop.java.controllers.CreateRentalController">
    <top>
        <HBox>
            <Label text="Create Rental" styleClass="PageHeader" />
        </HBox>
    </top>

    <center>
        <VBox>
            <HBox>
                <Label text="Customer" />
                <ChoiceBox fx:id="customerChoiceBox" onAction="#handleCustomerChange"/>
            </HBox>
            <HBox>
                <Label text="Console" />
                <ChoiceBox fx:id="consoleChoiceBox" onAction="#handleConsoleChange" />
                <CheckBox fx:id="consoleRequired" text="Console Required?" onAction="#handleConsoleRequiredChange"/>
            </HBox>

            <HBox fx:id="gameTableWrapper" visible="false">
                <TableView fx:id="gameTableView" >
                    <columns>
                        <TableColumn text="Game ID" fx:id="idColumn" />
                        <TableColumn text="Title" fx:id="nameColumn" />
                    </columns>
                </TableView>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox>
            <Button fx:id="reviewRentalButton" onAction="#reviewRental" text="Review the Rental" />
            <Button text="Go Back" onAction="#handleGoBack" />
        </HBox>
    </bottom>

</BorderPane>
