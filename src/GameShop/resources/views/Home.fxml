<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="GameShop.java.controllers.HomeController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <BorderPane>
        <top>
            <HBox>
                <Button text="Sign In" onAction="#handleSignIn" />
            </HBox>
        </top>

        <center>
            <HBox>
                <Button text="View All Games" onAction="#handleViewGames" />
                <Button text="View All Consoles" onAction="#handleViewConsoles" />
            </HBox>
        </center>

    </BorderPane>
</GridPane>